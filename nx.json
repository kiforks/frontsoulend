{
	"$schema": "./node_modules/nx/schemas/nx-schema.json",
	"defaultProject": "frontsoulend",
	"defaultBase": "main",
	"namedInputs": {
		"default": [
			"{projectRoot}/**/*",
			"sharedGlobals"
		],
		"production": [
			"default",
			"!{projectRoot}/.eslintrc.json",
			"!{projectRoot}/.stylelint.json",
			"!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
			"!{projectRoot}/tsconfig.spec.json",
			"!{projectRoot}/jest.config.[jt]s",
			"!{projectRoot}/src/test-setup.[jt]s",
			"!{projectRoot}/test-setup.[jt]s"
		],
		"sharedGlobals": [
			"{workspaceRoot}/.github/workflows/ci.yml"
		]
	},
	"targetDefaults": {
		"@angular-devkit/build-angular:application": {
			"cache": true,
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"production",
				"^production"
			]
		},
		"@nx/eslint:lint": {
			"cache": true,
			"inputs": [
				"default",
				"{workspaceRoot}/.eslintrc.json",
				"{workspaceRoot}/.eslintignore"
			]
		},
		"@nx/jest:jest": {
			"cache": true,
			"inputs": [
				"default",
				"^production",
				"{workspaceRoot}/jest.preset.js"
			],
			"options": {
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		},
		"nx-stylelint:lint": {
			"cache": true,
			"inputs": [
				"default",
				"{workspaceRoot}/.stylelint.json",
				"{workspaceRoot}/.stylelintignore"
			]
		},
		"e2e-ci--**/*": {
			"dependsOn": [
				"^build"
			]
		}
	},
	"plugins": [
		{
			"plugin": "@nx/playwright/plugin",
			"options": {
				"targetName": "e2e"
			}
		},
		{
			"plugin": "@nx/eslint/plugin",
			"options": {
				"targetName": "lint"
			}
		},
		{
			"plugin": "nx-stylelint",
			"options": {
				"targetName": "stylelint"
			}
		}
	],
	"generators": {
		"@nx/angular:application": {
			"e2eTestRunner": "playwright",
			"linter": "eslint",
			"style": "scss",
			"unitTestRunner": "jest"
		},
		"@schematics/angular:component": {
			"style": "scss",
			"changeDetection": "OnPush",
			"prefix": "app",
			"skipTests": true,
			"skipImport": true
		},
		"@schematics/angular:directive": {
			"standalone": true,
			"prefix": "app",
			"skipTests": true,
			"skipImport": true,
			"flat": false
		},
		"@schematics/angular:pipe": {
			"standalone": true,
			"skipTests": true,
			"skipImport": true,
			"flat": false
		},
		"@schematics/angular:service": {
			"skipTests": true,
			"flat": false
		},
		"@schematics/angular:guard": {
			"skipTests": true,
			"flat": false
		},
		"@schematics/angular:interceptor": {
			"skipTests": true,
			"flat": false
		},
		"@schematics/angular:interface": {
			"prefix": "app",
			"type": "interface"
		},
		"@schematics/angular:enum": {
			"type": "enum"
		},
		"@ngneat/spectator:spectator-component": {
			"style": "scss",
			"changeDetection": "OnPush",
			"prefix": "app",
			"skipImport": true
		},
		"@ngneat/spectator:spectator-directive": {
			"standalone": true,
			"prefix": "app",
			"skipImport": true,
			"flat": false
		},
		"@ngneat/spectator:spectator-pipe": {
			"standalone": true,
			"skipImport": true,
			"flat": false
		},
		"@ngneat/spectator:spectator-service": {
			"flat": false
		}
	},
	"nxCloudId": "672be036b76a0e014484fa2b"
}