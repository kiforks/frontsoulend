{
	"name": "storybook",
	"$schema": "../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "storybook/src",
	"tags": ["scope:storybook"],
	"projectType": "library",
	"targets": {
		"lint": {
			"executor": "@nx/eslint:lint"
		},
		"stylelint": {
			"executor": "nx-stylelint:lint",
			"options": {
				"lintFilePatterns": ["./storybook/src/**/*.scss"]
			}
		},
		"storybook": {
			"executor": "@storybook/angular:start-storybook",
			"options": {
				"port": 4400,
				"configDir": "storybook/.storybook",
				"browserTarget": "storybook:build-storybook",
				"compodoc": false,
				"experimentalZoneless": true
			},
			"configurations": {
				"ci": {
					"quiet": true
				}
			}
		},
		"build-storybook": {
			"executor": "@storybook/angular:build-storybook",
			"outputs": ["{options.outputDir}"],
			"options": {
				"outputDir": "dist/storybook/@frontsoulend",
				"configDir": "./.storybook",
				"browserTarget": "storybook:build-storybook",
				"compodoc": false,
				"experimentalZoneless": true
			},
			"configurations": {
				"ci": {
					"quiet": true
				}
			}
		},
		"test-storybook": {
			"executor": "nx:run-commands",
			"options": {
				"command": "test-storybook -c storybook/.storybook --url=http://localhost:4400",
				"experimentalZoneless": true
			}
		},
		"static-storybook": {
			"executor": "@nx/web:file-server",
			"dependsOn": ["build-storybook"],
			"options": {
				"buildTarget": "storybook:build-storybook",
				"staticFilePath": "dist/storybook/@frontsoulend",
				"spa": true,
				"experimentalZoneless": true
			},
			"configurations": {
				"ci": {
					"buildTarget": "storybook:build-storybook:ci"
				}
			}
		},
		"storybook-composition": {
			"executor": "nx:run-commands",
			"options": {
				"commands": ["nx storybook libs/frontend/angular/ui"],
				"parallel": true
			}
		},
		"build-storybook:prod": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"nx run libs/frontend/angular/ui:build-storybook --configDir=libs/frontend/angular/ui/.storybook",
					"nx run storybook:build-storybook --configDir=storybook/.storybook"
				],
				"parallel": true
			}
		}
	}
}
