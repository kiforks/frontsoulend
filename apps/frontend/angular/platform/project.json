{
	"name": "platform",
	"$schema": "../../../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"prefix": "app",
	"sourceRoot": "apps/frontend/angular/platform/src",
	"tags": ["scope:app"],
	"i18n": {
		"sourceLocale": "en-US",
		"locales": {
			"ua": "apps/frontend/angular/platform/src/locale/messages.ua.xlf"
		}
	},
	"targets": {
		"build": {
			"executor": "@nx/angular:browser-esbuild",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/apps/frontend/angular/platform",
				"index": "apps/frontend/angular/platform/src/app/index.html",
				"main": "apps/frontend/angular/platform/src/app/main.ts",
				"tsConfig": "apps/frontend/angular/platform/tsconfig.app.json",
				"inlineStyleLanguage": "scss",
				"assets": [
					{
						"glob": "**/*",
						"input": "apps/frontend/angular/platform/public"
					}
				],
				"styles": ["apps/frontend/angular/platform/src/shared/scss/styles.scss"],
				"scripts": [],
				"localize": ["en-US", "ua"],
				"polyfills": ["@angular/localize/init"]
			},
			"configurations": {
				"production": {
					"fileReplacements": [
						{
							"replace": "apps/frontend/angular/platform/environments/environment.ts",
							"with": "apps/frontend/angular/platform/environments/environment.prod.ts"
						}
					],
					"budgets": [
						{
							"type": "initial",
							"maximumWarning": "500kb",
							"maximumError": "1mb"
						},
						{
							"type": "anyComponentStyle",
							"maximumWarning": "2kb",
							"maximumError": "4kb"
						}
					],
					"outputHashing": "all",
					"localize": true,
					"i18nMissingTranslation": "error",
					"i18nDuplicateTranslation": "error"
				},
				"development": {
					"optimization": false,
					"extractLicenses": false,
					"sourceMap": true
				}
			},
			"defaultConfiguration": "production"
		},
		"serve": {
			"executor": "@nx/angular:dev-server",
			"configurations": {
				"production": {
					"buildTarget": "platform:build:production"
				},
				"development": {
					"buildTarget": "platform:build:development",
					"hmr": true
				}
			},
			"defaultConfiguration": "development"
		},
		"extract-i18n": {
			"executor": "@angular-devkit/build-angular:extract-i18n",
			"options": {
				"buildTarget": "platform:build",
				"outputPath": "apps/frontend/angular/platform/src/locale"
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint"
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "apps/frontend/angular/platform/jest.config.ts"
			}
		},
		"stylelint": {
			"executor": "nx-stylelint:lint",
			"options": {
				"lintFilePatterns": ["./apps/frontend/angular/platform/src/**/*.scss"]
			}
		},
		"serve-static": {
			"executor": "@nx/web:file-server",
			"options": {
				"buildTarget": "platform:build",
				"port": 4200,
				"staticFilePath": "dist/apps/frontend/angular/platform/browser",
				"spa": true
			}
		}
	}
}
