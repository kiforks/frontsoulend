{
	"name": "ng-ui",
	"$schema": "../../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/frontend/angular/ui/src",
	"projectType": "library",
	"tags": ["scope:lib", "scope:ui"],
	"implicitDependencies": ["utilities"],
	"targets": {
		"build": {
			"executor": "@nx/angular:package",
			"outputs": ["{workspaceRoot}/dist/{projectRoot}"],
			"options": {
				"project": "libs/frontend/angular/ui/ng-package.json"
			},
			"configurations": {
				"production": {
					"tsConfig": "libs/frontend/angular/ui/tsconfig.lib.prod.json"
				},
				"development": {
					"tsConfig": "libs/frontend/angular/ui/tsconfig.lib.json"
				}
			},
			"defaultConfiguration": "production"
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/frontend/angular/ui/jest.config.ts"
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint"
		},
		"stylelint": {
			"executor": "nx-stylelint:lint",
			"options": {
				"lintFilePatterns": ["./libs/frontend/angular/ui/src/**/*.scss"]
			}
		},
		"storybook": {
			"executor": "@storybook/angular:start-storybook",
			"options": {
				"port": 4401,
				"configDir": "libs/frontend/angular/ui/.storybook",
				"browserTarget": "ng-ui:build-storybook",
				"compodoc": false,
				"experimentalZoneless": true
			},
			"configurations": {
				"ci": {
					"quiet": true
				}
			}
		},
		"build-storybook": {
			"executor": "@storybook/angular:build-storybook",
			"outputs": ["{options.outputDir}"],
			"options": {
				"outputDir": "dist/storybook/frontend/angular/ui",
				"configDir": "./.storybook",
				"browserTarget": "ng-ui:build-storybook",
				"compodoc": false,
				"experimentalZoneless": true
			},
			"configurations": {
				"ci": {
					"quiet": true
				}
			}
		},
		"test-storybook": {
			"executor": "nx:run-commands",
			"options": {
				"command": "test-storybook -c libs/frontend/angular/ui/.storybook --url=http://localhost:4400",
				"experimentalZoneless": true
			}
		},
		"static-storybook": {
			"executor": "@nx/web:file-server",
			"dependsOn": ["build-storybook"],
			"options": {
				"buildTarget": "ng-ui:build-storybook",
				"staticFilePath": "dist/storybook/ng-ui",
				"spa": true,
				"experimentalZoneless": true
			},
			"configurations": {
				"ci": {
					"buildTarget": "ng-ui:build-storybook:ci"
				}
			}
		}
	}
}
